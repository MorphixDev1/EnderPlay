<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background_movie"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/capa_enderplay"
        android:scaleType="fitXY"/>
    <ImageView
        android:id="@+id/play_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="50dp"
        android:background="@drawable/play_buttom"
        android:alpha="0.7"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/gradient_shape">
    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp">
        <TextView
            android:id="@+id/categorias"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|start"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/white"
            android:alpha="0.8"
            android:text="Categorias"/>
        <TextView
            android:id="@+id/idioma"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Idioma"
            android:gravity="bottom|start"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="30dp"
            android:alpha="0.8"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/movie_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|right"
            android:layout_marginBottom="25dp"
            android:textColor="#e2ffffff"
            android:textSize="13sp"
            android:text="Nome do Filme"/>
        <TextView
            android:id="@+id/releacedate"
            android:textColor="#e2ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:gravity="bottom"
            android:alpha="0.5"
            android:text="2017"/>
        <TextView
            android:id="@+id/diretor"
            android:text="diretor"
            android:textColor="#e2ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|end"
            android:alpha="0.5"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="240dp"
        android:background="@drawable/gradient_shape_2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:padding="10dp"
                android:textSize="15sp"
                android:text="Teste de descrição....."/>
            <GridView
                android:layout_below="@id/descricao"
                android:layout_width="match_parent"
                android:layout_height="298dp"
                android:columnWidth="90dp"
                android:numColumns="auto_fit"
                android:verticalSpacing="0dp"
                android:horizontalSpacing="0dp"
                android:scrollbars="none"
                android:stretchMode="spacingWidthUniform"
                android:layout_marginBottom="50dp"
                android:id="@+id/outros_filmes">
            </GridView>

        </RelativeLayout>
    </ScrollView>

</FrameLayout>
