<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background_movie"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/capa_enderplay"
        android:scaleType="fitXY"
        android:alpha="0.9" />
    <ImageView
        android:id="@+id/play_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="50dp"
        android:background="@drawable/play_buttom"
        android:alpha="0.7"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/gradient_shape">
    </View>
    <TextView
        android:id="@+id/idioma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="20dp"
        android:text="Idioma"
        android:alpha="0.8"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/movie_name"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:textColor="#e2ffffff"
        android:textSize="12dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="5dp"
        android:text="Nome do Filme"/>
    <TextView
        android:id="@+id/releacedate"
        android:textColor="#e2ffffff"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="215dp"
        android:alpha="0.5"
        />
    <TextView
        android:id="@+id/diretor"
        android:text="diretor"
        android:textColor="#e2ffffff"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="215dp"
        android:gravity="right"
        android:layout_gravity="right"
        android:alpha="0.5"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="240dp"
        android:background="@drawable/gradient_shape_2">
        <TextView
            android:id="@+id/descricao"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:textColor="@color/white"
            android:scrollbars="horizontal"
            android:fontFamily="sans-serif"
            android:padding="10dp"
            android:textSize="15dp"
            android:text="Teste de descrição....."
            android:layout_row="0"
            android:layout_column="0" />

    </GridLayout>
</FrameLayout>
