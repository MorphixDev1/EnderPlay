<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:id="@+id/background_movie"
        android:layout_width="235dp"
        android:layout_height="240dp"
        android:background="@drawable/capa_enderplay"
        android:scaleType="fitXY"/>
    <ImageView
        android:id="@+id/play_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="left"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/play_buttom"
        android:alpha="0.7"
        />
    <View
        android:layout_width="235dp"
        android:layout_height="240dp"
        android:background="@drawable/gradient_shape">
    </View>
    <TextView
        android:id="@+id/idioma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="2dp"
        android:text="Idioma"
        android:alpha="0.8"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/movie_name"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="right"
        android:textColor="#e2ffffff"
        android:textSize="12dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="5dp"
        android:text="Nome do Filme"/>
    <TextView
        android:id="@+id/releacedate"
        android:textColor="#e2ffffff"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="215dp"
        android:alpha="0.5"
        />
    <TextView
        android:id="@+id/diretor"
        android:text="diretor"
        android:textColor="#e2ffffff"
        android:layout_width="230dp"
        android:layout_height="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="215dp"
        android:gravity="right"
        android:layout_gravity="left"
        android:alpha="0.5"/>
    <GridLayout
        android:layout_width="360dp"
        android:layout_gravity="right"
        android:layout_height="240dp"
        android:background="@color/black">
        <GridView
            android:layout_row="1"
            android:layout_column="0"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:columnWidth="90dp"
            android:numColumns="auto_fit"
            android:verticalSpacing="0dp"
            android:horizontalSpacing="0dp"
            android:stretchMode="columnWidth"
            android:layout_marginBottom="50dp"
            android:gravity="top"
            android:scrollbars="vertical"
            android:id="@+id/outros_filmes">
        </GridView>
    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="240dp"
        android:background="@drawable/gradient_shape_2">
        <TextView
            android:id="@+id/descricao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:scrollbars="vertical"
            android:fontFamily="sans-serif"
            android:padding="10dp"
            android:textSize="15dp"
            android:text="Teste de descrição....."
            android:layout_row="0"
            android:layout_column="0" />
    </GridLayout>
</FrameLayout>
